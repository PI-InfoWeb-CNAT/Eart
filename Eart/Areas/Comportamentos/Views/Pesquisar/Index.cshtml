                    @Html.EditorFor(model => model.ItemPesquisa, new { htmlAttributes = new { @class = "input", placeholder = "Pesquise" } })
                </div>
            </div>
        </div>
    }
            <nav>
                <ul>
                    <li><a href="nome"> Membros </a> </li>
                    <li><a href="postagem"> Postagens </a></li>
                </ul>
            </nav>
            <div class="nome">
                @Html.Partial("~/Areas/Comportamentos/Views/Pesquisar/_PesquisarMembroPorNome.cshtml", Model.Membros.ToList());
                @Html.Partial("~/Areas/Comportamentos/Views/Pesquisar/_PesquisarMembroPorUsuario.cshtml", Model.Membros.ToList());
            </div>
            <div class="postagem">
                @Html.Partial("~/Areas/Comportamentos/Views/Pesquisar/_PesquisarPostagemPorConteudo.cshtml", Model.Postagens.ToList());
            </div>

    </body>
</html>
