@model Eart.Areas.Comportamentos.Models.Comentario

@{
    var idIndex = ViewBag.IdIndex;
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Criar comentário";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title> Criar comentário </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=0">
    <link rel="stylesheet" href="~/Css/styles.css">
    <link rel="shortcut icon" type="imagex/png" href="~/Imagens/logo_ico.ico">
    <!--<link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />-->
</head>
<body>
    <header class="logo" style="display: flex; justify-content: center !important; position: absolute; top: 0;">
        <img style="margin-left: 25% !important;" id="logo_img" alt="Logo" src="~/Imagens/logo.png" />
        <h1 id="logo_nome" style="">Eart</h1>
    </header>
    <div class="container">
        <div class="box">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    @Html.HiddenFor(model => model.PostagemId)
                    @Html.HiddenFor(model => model.MembroId)

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Texto, new { @cols = 44, htmlAttributes = new { @class = "input", placeholder = "Adicionar comentário..." } })
                            @Html.ValidationMessageFor(model => model.Texto, "", new { @class = "error" })
                        </div>
                    </div>
                </div>
                <div>
                    <button class="publicar"> Publicar </button>
                    @Html.ActionLink("Cancelar", "Index", "Comentarios", new { area = "Comportamentos", idPostagem = Model.PostagemId, idIndex = idIndex }, new { @class = "cancelar" })
                </div>
                <br /> <br />
            }
        </div>
    </div>
</body>
</html>