@model Eart.Areas.Comportamentos.Models.Comentario

@{
    var idIndex = ViewBag.IdIndex;
    var membrologado = ViewBag.MembroLogado;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title> Ver comentário </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=0">
    <link rel="stylesheet" href="~/Css/styles.css">
    <link rel="shortcut icon" type="imagex/png" href="~/Imagens/logo_ico.ico">
    <!--<link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />-->
</head>
<body>
    <header class="logo" style="display: flex; justify-content: center !important; position: absolute; top: 0;">
        <img style="margin-left: 25% !important;" id="logo_img" alt="Logo" src="~/Imagens/logo.png" />
        <h1 id="logo_nome" style="">Eart</h1>
    </header>
    <div class="panel panel-primary">
        <div class="panel-body">
            <div class="comentario">
                @if (Model.Membro.FotoPerfil == null)
                {
                    <div class="imgPerfPostag">
                        <img src="~/Imagens/avatar.png" style="display: block; margin-left: auto; margin-right: auto; width: 55px; height: 55px; border-radius: 50%; border: solid 1px #F0818E;" />
                    </div> }
                else
                {
                    <div class="imgPerfPostag">
                        <a>
                            <img class="img-thumbnail" src="~/Membros/Membros/GetFotoPerfil/@membrologado.MembroId" style="display: block; margin-left: auto; margin-right: auto; width: 45px; height: 45px; border-radius: 50%; border: solid 1px #F0818E;" />
                        </a>
                    </div>
                }
                <div class="form-group">
                    <div class="input-group">
                        <span>@Html.ActionLink(Model.Membro.Nome, "Details", "Membros", new { Area = "Membros", id = Model.MembroId }, new { @class = "nomeUsuario" })</span>
                        <br />
                        <span style="max-width: 300px; font-size: 18px; font-weight: normal !important;">@Model.Texto</span>
                    </div>
                </div>
                <br />
                <span class="dataPostagem">@Model.Data.ToShortDateString() às @Model.Data.Hour:@Model.Data.Minute</span>
            </div>
        </div>
    </div>
</body>
</html>

