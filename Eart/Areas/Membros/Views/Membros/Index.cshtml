@model IEnumerable<Eart.Areas.Membros.Models.Membro>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <title> Index </title>
    <link rel="stylesheet" href="~/Css/styles.css">
    <meta charset="utf-8">
</head>
<body>
    <table border="1">
        <tr>
            <th> Id </th>
            <th> Nome </th>
            <th> Usuário </th>
            <th> Email </th>
            <th> Biografia </th>
            <th> Senha </th>
            <th> Confirmação da senha </th>
            <th> Ações </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td> @item.MembroId  </td>
                <td> @item.Nome </td>
                <td> @item.Usuario </td>
                <td> @item.Email </td>
                <td> @item.Biografia </td>
                <td> @item.Senha </td>
                <td> @item.ConfSenha </td>
                <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.MembroId }) |
                            @Html.ActionLink("Detalhes", "Details", new { id = item.MembroId }) |
                            @Html.ActionLink("Excluir", "Delete", new { id = item.MembroId })
                        </td>
            </tr>
        }
    </table>
    <br /><br />
    @Html.ActionLink("Cadastro", "Create", "Membros")
    <br /><br />
    @Html.ActionLink("Sair", "Logout", "Account")
</body>
</html>